# Environment Configuration
# Copy this file to .env.local for local development

# Demo Mode Configuration
# Set to 'true' to force mock assistant (perfect for demo deployments)
DEMO_MODE=false

# OpenRouter API Configuration (only needed for production)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Site Configuration
SITE_NAME=chat-app
SITE_URL=http://localhost:3000

# Database Configuration
# For production, use a proper database URL
# For demo, SQLite is fine
DATABASE_URL=file:./prisma/dev.db

# Security Configuration
# Generate a random secret for production
SESSION_SECRET=your-session-secret-here

# Rate Limiting (optional)
# Adjust these values based on your needs
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level
LOG_LEVEL=info
